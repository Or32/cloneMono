{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",                   // or higher for clean ESM
    "module": "node16",
    "moduleResolution": "node16",        // TS5+ feature: rewrites extension-less imports
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "."
  },
  "include": ["bin"],         // <â€” include ALL source dirs
  "exclude": ["node_modules", "dist", "template"]
}
